<!DOCTYPE html>
<html>
  <head>
    <title>Shouter</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if alert %>
      <p><%= alert %></p>
    <% end %>

    <div class="container">
      <h1><%= link_to(image_tag("shouter_logo.png"), root_path) %></h1>

      <% if signed_in? %>
        <p>You are currently signed in as <%= current_user.username %>. <%= link_to "Sign out?", session_path, method: :delete %></p>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
