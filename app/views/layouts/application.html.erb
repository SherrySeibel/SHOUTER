<!DOCTYPE html>
<html>
  <head>
    <title>Shouter</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container">
      <% if alert %>
        <p><%= alert %></p>
      <% end %>

      <h1><%= link_to(image_tag("shouter_logo.png"), root_path) %></h1>

      <div>
        <% if signed_in? %>
          You are currently signed in as <%= current_user.username %>. <%= link_to "Sign out?", session_path, method: :delete %>
        <% end %>

        <% if current_user.admin? %>
          <%= link_to "Admin", admin_options_path %>
        <% end %>
        </div>
      <%= yield %>
    </div>

  </body>
</html>
