<%= form_for @home.new_text_shout do |form| %>
  <%= form.text_field :body, placeholder: "Shout something!" %>
  <%= form.submit "SHOUT!" %>
<% end %>

<%= form_for @home.new_photo_shout do |form| %>
  <%= form.file_field :image %>
  <%= form.submit "SHARE!"%>
<% end %>

<%= render @home.timeline %>
