<%= form_for @user do |form| %>
  <div class="col-md-3 col-md-offset-7">
    <div class="jumbotron col-md-2">
      <%= render "errors", target: @user %>
      <p><%= form.label :email %></p>
      <p><%= form.email_field :email %></p>
      <p><%= form.label :username %></p>
      <p><%= form.text_field :username %></p>
      <p><%= form.label :password %></p>
      <p><%= form.password_field :password %></p>
      <%= form.submit "Sign up", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="megaphone"><%= image_tag "sessions_background_megaphone.png" %></div>
